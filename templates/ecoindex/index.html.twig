	</section>

	<div class="container-medium pb-5">
		<div class="row borderSolid">

			<div class="col-sm-12 col-md-12 mb-2">
				<h2>NIVEAU D'ECOCONCEPTION DE NOTRE SITE</h2>
			</div>
			<div class="col-12 col-lg-8 col-xl-6 pt-4 pb-5">
				<div class="energy-chart">
					<div class="bar bar-a">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span>A</span>
						</div>
					</div>
					<div class="bar bar-b">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span class="writeWhite">B</span>
						</div>
					</div>
					<div class="bar bar-c">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span>C</span>
						</div>
					</div>
					<div class="bar bar-d">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span>D</span>
						</div>
					</div>
					<div class="bar bar-e">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span>E</span>
						</div>
					</div>
					<div class="bar bar-f">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span>F</span>
						</div>
					</div>
					<div class="bar bar-g">
						<div class="bar-vide"></div>
						<div class="bar-lettre">
							<span>G</span>
						</div>
					</div>
