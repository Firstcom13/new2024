    <div class="col-sm-12 col-md-12 p-5 background-article"
        style="background-image: url('{{ asset('uploads/images/campagnes-pub.webp') }}'); background-repeat: no-repeat; background-size: cover; background-position: center; display: flex; justify-content: center; align-items: center;">
