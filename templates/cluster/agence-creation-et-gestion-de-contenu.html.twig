{% block title %}
    Création de Contenu Optimisé pour le Web et les Marques 
{% endblock %}

{% block meta_description %}{% endblock %}

{% block body %}
    <style>
        .background-article {
            height: 98vh;
            position: relative;
        }

        .background-article::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

        .background-article > * {
            position: relative;
            z-index: 2;
        }

        .article-lancement h1 {
            font-size: 40px;
            font-weight: 800;
            margin: 0;
            text-align: left;
            width: 100%;
        }

        .article-contenu p {
            font-size: 14px;
        }

        .article-contenu h2 {
            font-size: 18px;
            color: #96A596;
            font-weight: 700;
        }

        .article-contenu h3 {
            font-size: 16px;
            font-weight: 700;
        }

        .article-img-contenu {
            width: 100%;
        }

        .article-fleche-contact {
            width: 20px;
            margin-right: 10px;
            position: relative;
            bottom: 1px;
        }

        a.article-contact {
            display: block;
            width: fit-content;
            text-decoration: none;
            font-weight: 700;
            color: #FFFFFF;
            background-color: #96A596;
            padding: 5px 12px;
        }

        .article-retour {
            width: fit-content;
            margin: 0 auto;
        }

        .article-retour a {
            text-decoration: none;
            font-weight: 700;
            color: #FFFFFF;
            background-color: #3C4141;
            padding: 5px 10px;
        }

        @media screen and(max-width: 991px) {
            .article-lancement h1 {
                font-size: 30px;
            }
        }

        .article-aside-img {
            height: 15vh;
        }

        .article-aside h2 {
            font-size: 18px;
            font-weight: 700;
        }

        .article-aside h3 {
            font-size: 16px;
            font-weight: 700;
        }

        .categories-aside a {
            display: block;
            width: fit-content;
            font-size: 14px;
            font-weight: 700;
