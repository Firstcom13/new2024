<div class="container-medium blog-home">
	<div class="row pt-5">
		<div class="col-12 col-sm-11">
			<h3 class="card-title-home-page">BLOG</h3>
		</div>
		<div class="col-12 col-sm-1 fleche d-md-none d-lg-flex"></div>
	</div>

	<div class="owl-carousel owl-carousel-2 pt-2 pb-5">

		{% if articles %}
			{% for article in articles %}
				<a href="{{ path('app_article_show', {
							'id': article.id,
							'slug': article.titre | striptags | slug | lower
						}) }}" class="article-home text-decoration-none mb-4">

					<div class="article-home-img" style="background-image: url('{{ asset('uploads/images/' ~ article.imgS) }}'); background-repeat: no-repeat; background-size: cover; background-position: center; display: flex; justify-content: center; align-items: center; border: 8px solid #96A596;"></div>
					<div class="infos mt-3">
						<span class="date">{{ article.dateCreation | date('d m Y') }}</span>
						{% for categorie in article.categorie %}
							<span class="categories">{{ categorie.nom }}</span>
						{% endfor %}
					</div>

					<div class="mt-3">
						<h3 class="article-home-h3">{{ article.titre | raw }}</h3>
					</div>

					<div class="mt-3">
						{{ article.descriptionCourte | split(' ') | slice(0, 15) | join(' ') | raw }} ...
					</div>

				</a>
			{% endfor %}
		{% endif %}

	</div>
</div>

<div class="container-medium background-basic-green pt-5">
