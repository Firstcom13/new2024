{% extends 'base.html.twig' %}

{% block title %}Ecoindex
{% endblock %}

{% block body %}

	<style>
		.energy-chart {
			display: flex;
			align-items: flex-end;
			position: relative;
			width: 100%;
		}

		.energy-chart .bar {
			flex: auto;
			text-align: center;
			border-bottom-left-radius: 0.33rem;
			border-bottom-right-radius: 0.33rem;
		}

		.energy-chart .bar .bar-lettre {
			padding: 1.14rem 5% 0.4rem;
			box-sizing: border-box;
		}

		.energy-chart .bar .bar-lettre span {
			font-size: 2rem;
			font-weight: 700;
		}

		@media screen and (max-width: 991px) {
			.energy-chart .bar .bar-lettre span {
				font-size: 1.5rem;
			}
		}

		.energy-chart .bar .bar-vide {
			padding: 10px;
		}

		.energy-chart .bar-a .bar-vide { 
			background-color: #4f9f30; 
			border-top-left-radius: 0.33rem;
			border-bottom-left-radius: 0.33rem;
		}
		.energy-chart .bar-b { background-color: #51b84b; }
		.energy-chart .bar-c .bar-vide { background-color: #cadb2a; }
		.energy-chart .bar-d .bar-vide { background-color: #f6eb15; }
		.energy-chart .bar-e .bar-vide { background-color: #fecd06; }
		.energy-chart .bar-f .bar-vide { background-color: #f99839; }
		.energy-chart .bar-g .bar-vide { 
			background-color: #ed2124; 
			border-top-right-radius: 0.33rem;
			border-bottom-right-radius: 0.33rem;
		}

		.point-before:before {
			content: '';
			display: inline-block;
			width: 6px;
			height: 6px;
			background-color: #000;
			margin-right: 6px;
			vertical-align: middle;
			position: relative;
			bottom: 1px
		}

	</style>

	<section id="container-ecoindex">
		<div class="row contact_page">
			<div class="col-md-4 col-12 contact_part1">
